@model Testimonial
@{
    ViewData["Title"] = "CreateComment";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yorum Ekleme Sayfası</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="exampleInputName1"> İsim Soyisim Ekle</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="Namesurname">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Mesleğini Ekle</label>
                        <input type="text" class="form-control" id="exampleInputName1"  asp-for="Job">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Resim Linki Ekle</label>
                        <input type="text" class="form-control" id="exampleInputName1"  asp-for="imgUrl">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Yorum Ekle</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="Comment">
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                    <a href="/Comment/Index" class="btn btn-outline-primary">Iptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
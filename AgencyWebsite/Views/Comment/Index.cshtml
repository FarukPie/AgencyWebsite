@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Müşteri Yorumları</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>İsim Soyisim</th>
                                <th>Mesleği </th>
                                <th>Resim Url</th>
                                <th>Yorum</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Namesurname</td>
                                    <td>@item.Job</td>
                                    <td>@item.imgUrl</td>
                                    <td>@item.Comment</td>
                                    <td><a href="/Comment/DeleteComment/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Comment/UpdateComment/@item.TestimonialId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>

                            }

                        </tbody>
                    </table>
                    <br><br />
                    <a href="/Comment/CreateComment" class="btn btn-outline-primary">Yeni Yorum Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

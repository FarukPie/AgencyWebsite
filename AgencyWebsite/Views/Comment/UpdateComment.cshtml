@model Testimonial
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yorum Güncelleme Sayfası</h4>
                <form class="forms-sample" method="post">

                    <div class="form-group">
                        <input type="hidden" asp-for="TestimonialId" />
                        <label for="exampleInputName1">İsim Soyisim Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama" asp-for="Namesurname">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Mesleği Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama" asp-for="Job">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Resim Linki Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Resim Linki" asp-for="imgUrl">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Yorum Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Resim Linki" asp-for="Comment">
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <a href="/Comment/Index" class="btn btn-outline-primary">Iptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
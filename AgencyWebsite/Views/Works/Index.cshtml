@model List<Work>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Hakkımda Bölümü</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Sayı</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Count</td>
                                    <td><a href="/Category/DeleteCategory/@item.WorkId" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Category/UpdateCategory/@item.WorkId" class="btn btn-outline-success">Update</a></td>
                                </tr>

                            }

                        </tbody>
                    </table>
                    <br><br />
                    <a href="/Category/AddCategory" class="btn btn-outline-primary">Add New Category</a>
                </div>
            </div>
        </div>
    </div>
</div>

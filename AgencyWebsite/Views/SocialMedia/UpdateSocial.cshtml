@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocial";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sosyal Medya Güncelleme Sayfası</h4>
                <form class="forms-sample" method="post">

                    <div class="form-group">
                        <input type="hidden" asp-for="SocialMediaId" />
                        <label for="exampleInputName1">Sosyal Medya Linki Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama" asp-for="item">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Simgeyi Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama" asp-for="imgUrl">
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <a href="/SocialMedia/Index" class="btn btn-outline-primary">Iptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Hakkımda Bölümü</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Alt Başlık </th>
                                <th>Acıklama</th>
                                <th>Alt Acıklama</th>
                                <th>Resim Urlsi 1</th>
                                <th>Resim Urlsi 2</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Title2</td>
                                    <td>@item.Description1</td>
                                    <td>@item.Description2</td>
                                    <td>@item.imgUrl1</td>
                                    <td>@item.imgUrl2</td>
                                    <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Update</a></td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

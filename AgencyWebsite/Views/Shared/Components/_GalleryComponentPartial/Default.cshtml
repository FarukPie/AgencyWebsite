@model List<Gallery>

<div class="row g-4">
@foreach (var item in Model)
{
    var modalId = $"mediaModal_{item.GalleryId}";
    
    <div class="col-12 col-sm-6 col-lg-4 single_gallery_item visual">
        <div class="position-relative">

            @if (item.MediaType == "image")
            {
                <img src="@item.imgUrl" alt="" class="img-fluid rounded" style="width: 100%; height: auto;">
            }
            else if (item.MediaType == "video")
            {
                <video class="img-fluid rounded" style="width: 100%; height: auto;" muted autoplay loop>
                    <source src="@item.imgUrl" type="video/mp4" />
                    Tarayıcınız video etiketini desteklemiyor.
                </video>
            }

            <!-- Hover Overlay -->
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-50"
                 style="opacity: 0; transition: opacity 0.3s;"
                 onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0'">
                <div class="text-white text-center">
                    <a href="#" class="text-white" style="font-size: 1.5rem;" data-bs-toggle="modal" data-bs-target="#@modalId">
                        <i class="fa fa-eye"></i>
                    </a>
                    <h4 class="mt-2">@item.HoverTitle</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="modalLabel_@item.GalleryId" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="modalLabel_@item.GalleryId">@item.MainTitle</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body text-center">
                    @if (item.MediaType == "image")
                    {
                        <img src="@item.imgUrl" alt="Modal Resim" class="img-fluid rounded mb-3">
                    }
                    else if (item.MediaType == "video")
                    {
                        <video class="img-fluid rounded mb-3" controls>
                            <source src="@item.imgUrl" type="video/mp4" />
                            Tarayıcınız video etiketini desteklemiyor.
                        </video>
                    }

                    <p>@item.Description</p>
                </div>
            </div>
        </div>
    </div>
}
</div>

@model Contact

<section class="contact-area section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Section Heading -->
                <div class="section-heading text-center wow fadeInUp" data-wow-delay="100ms">
                    <h2>İletişim</h2>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Contact Form -->
                <div class="contact-form-area text-center">
                    <form asp-controller="Contact" asp-action="Submit" method="post">
                        <input type="text" asp-for="Namesurname" class="form-control wow fadeInUp" data-wow-delay="100ms" placeholder="İsminiz" />
                        <span asp-validation-for="Namesurname" class="text-danger"></span>

                        <input type="email" asp-for="Email" class="form-control wow fadeInUp" data-wow-delay="300ms" placeholder="E-Postanız" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <input type="text" asp-for="Phone" class="form-control wow fadeInUp" data-wow-delay="500ms" placeholder="Telefon numaranız" />
                        <span asp-validation-for="Phone" class="text-danger"></span>

                        <textarea asp-for="Message" class="form-control wow fadeInUp" data-wow-delay="700ms" placeholder="Mesajınız"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>

                        <button type="submit" class="btn btn-outline-warning" data-wow-delay="900ms">Gönder ></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}

@model Slider
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slayt Güncelleme Sayfası</h4>
                <form class="forms-sample" method="post">

                    <div class="form-group">
                        <input type="hidden" asp-for="SliderId" />
                        <label for="exampleInputName1">Birinci Açıklamayı Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama" asp-for="Description1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">İkinci Açıklamayı Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama" asp-for="Description2">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Resim Linki Güncelle</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Resim Linki" asp-for="imgUrl1">
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <a href="/Slider/Index" class="btn btn-outline-primary">Iptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
@model List<Slider>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
}
<div class="row">

	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h3 class="card-title">Slayt Bölümü</h3>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>Kalın Punto Başlık</th>
								<th>Alt Açıklama</th>
								<th>Resim Url</th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Description1</td>
									<td>@item.Description2</td>
									<td>@item.imgUrl1</td>

									<td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-outline-success">Güncelle</a></td>
								</tr>

							}

						</tbody>
					</table>
					<br><br />
					<a href="/Slider/CreateSlider" class="btn btn-outline-primary">Yeni Slayt Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>